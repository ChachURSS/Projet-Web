<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Réinitialisation du mot de passe</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const success = {{ flash_success is defined and flash_success ? 'true' : 'false' }};
            if (success) {
                const btn = document.getElementById("submitBtn");
                btn.textContent = "OK";

                setTimeout(() => {
                    window.location.href = "/login";
                }, 3000);

                btn.addEventListener("click", function (e) {
                    e.preventDefault();
                    window.location.href = "/login";
                });
            }
        });
    </script>
</head>
<body class="bg-light d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow p-4" style="max-width: 400px;">
        <h4 class="text-center mb-3">Mot de passe oublié</h4>
        {% if flash_error %}
            <div class="alert alert-danger">
                {{ flash_error }}<br>
                Veuillez contacter un administrateur de votre organisation.
            </div>
        {% endif %}
        {% if flash_success %}
            <div class="alert alert-success">
                {{ flash_success }}<br>
            </div>
        {% endif %}

        <form method="POST" action="/forgot-password" id="resetForm">
            <div class="mb-3">
                <label for="email" class="form-label">Votre adresse email</label>
                <input type="email" class="form-control" name="email" id="email" required>
            </div>
            <button type="submit" id="submitBtn" class="btn btn-primary w-100">Réinitialiser</button>
        </form>
    </div>
</body>
</html>
