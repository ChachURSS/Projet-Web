<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Détails de l'entreprise - EasyStage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/style.css">
    <script defer="" src="/assets/js/script.js"></script>
</head>
<body>
    {% include "navbar.twig" %}

    <div class="container mt-5">
        <h2 class="mb-4">Détails de l'entreprise</h2>

        <div class="card mb-4 shadow-sm">
            <div class="row g-0">
                <div class="col-md-4 d-flex justify-content-center align-items-center bg-light">
                    <img src="{{ company.path_to_icon }}" alt="Logo de {{ company.name }}" class="img-fluid rounded shadow-sm" style="max-width: 200px; max-height: 200px; object-fit: contain;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title">{{ company.name }}</h3>
                        <p class="card-text text-muted">{{ company.description }}</p>
                        <p class="card-text"><strong>Adresse :</strong> {{ company.address }}</p>
                        <p class="card-text"><strong>Contact :</strong> {{ company.contact }}</p>
                        <p class="card-text"><strong>Email :</strong> {{ company.email }}</p>
                        <p class="card-text"><strong>Téléphone :</strong> {{ company.phone }}</p>
                    </div>
                </div>
            </div>
        </div>

        <h3 class="mb-4">Stages proposés</h3>
        {% if internships is not empty %}
            <div class="list-group">
                {% for internship in internships %}
                    <a href="/internships/detail/{{ internship.id_internship }}" class="list-group-item list-group-item-action">
                        <h5 class="mb-1">{{ internship.title }}</h5>
                        <p class="mb-1">{{ internship.description }}</p>
                        <small>Début : {{ internship.bdate }} - Fin : {{ internship.edate }}</small>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <p>Aucun stage proposé par cette entreprise.</p>
        {% endif %}

        <a href="/companies" class="btn btn-secondary mt-4">Retour à la liste des entreprises</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
