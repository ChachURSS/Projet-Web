<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
			<title>Modifier l'entreprise</title>
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
	<body>
		{% include "navbar.twig" %}
		<div class="container mt-5">
			<h3 class="mb-4">Modifier les informations de l'entreprise</h3>
			<form method="POST" action="/company/update" enctype="multipart/form-data" class="row g-3">
				<input type="hidden" name="id_company" value="{{ company.id_company }}">
					<div class="col-md-6">
						<label class="form-label">Nom de l'entreprise</label>
						<input type="text" name="name" value="{{ company.name }}" class="form-control" required="">
        </div>

					<div class="col-md-12">
						<label class="form-label">Description</label>
						<textarea name="description" class="form-control" rows="4">{{ company.description }}</textarea>
					</div>

					<div class="col-md-12">
						<label class="form-label">Logo actuel :</label>
						<br>
							{% if company.path_to_icon %}
							<img src="{{ company.path_to_icon }}" alt="Logo de l'entreprise" class="img-fluid rounded shadow-sm" style="max-width: 200px; max-height: 200px; object-fit: contain;">

								<div class="form-check">
									<input class="form-check-input" type="checkbox" name="delete_logo" id="deleteLogo">
										<label class="form-check-label" for="deleteLogo">Supprimer le logo actuel</label>
									</div>
								{% else %}
								<p class="text-muted">Aucun logo n'est actuellement renseign√©.</p>
								{% endif %}
							</div>

					<div class="col-md-6">
						<label class="form-label">Nouveau logo (fichier image uniquement)</label>
						<input type="file" name="logo" accept="image/*" class="form-control">
        </div>

					<div class="col-md-12">
						<button type="submit" class="btn btn-success">Enregistrer</button>
						<a href="/companies" class="btn btn-secondary ms-2">Annuler</a>
					</div>
				</form>
		</div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
